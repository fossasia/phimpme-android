<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:stretchColumns="0,1,2"
             android:layout_height="@dimen/editor_mid_row_size">
    <TableRow>
        <LinearLayout
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:id="@+id/menu_item3"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="@dimen/editor_mid_row_size">

            <ImageView
                android:id="@+id/item3iconimage"
                android:layout_width="@dimen/icon_item_image_size"
                android:layout_height="@dimen/icon_item_image_size"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/item3text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/icon_item_title_size"
                android:textAlignment="center"
                android:text="item1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:id="@+id/menu_item4"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="@dimen/editor_mid_row_size">

            <ImageView
                android:id="@+id/item4iconimage"
                android:layout_width="@dimen/icon_item_image_size"
                android:layout_height="@dimen/icon_item_image_size"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/item4text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/icon_item_title_size"
                android:textAlignment="center"
                android:text="item2"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:id="@+id/menu_item5"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="@dimen/editor_mid_row_size">

            <ImageView
                android:id="@+id/item5iconimage"
                android:layout_width="@dimen/icon_item_image_size"
                android:layout_height="@dimen/icon_item_image_size"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/item5text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/icon_item_title_size"
                android:textAlignment="center"
                android:text="item2"/>

        </LinearLayout>
    </TableRow>
</TableLayout>