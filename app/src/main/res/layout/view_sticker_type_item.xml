<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/bottom_banner_height"
              android:orientation="vertical"
              android:paddingStart="@dimen/medium_big_spacing"
              android:paddingEnd="@dimen/medium_big_spacing">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/alternate_margin"
        android:scaleType="centerInside"
        android:src="@drawable/yd_image_tx"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/sub_big_text"/>

</FrameLayout>