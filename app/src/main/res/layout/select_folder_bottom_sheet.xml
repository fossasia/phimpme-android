<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_select_folder"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:id="@+id/ll_bottom_sheet_title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingStart="@dimen/big_spacing"
                  android:paddingEnd="@dimen/big_spacing"
                  android:paddingTop="@dimen/medium_spacing"
                  android:paddingBottom="@dimen/medium_spacing"
                  android:weightSum="10"
    >
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bottom_sheet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_dark_primary_text"
                android:textSize="@dimen/sub_big_text"
                android:textStyle="bold"
            />
            <TextView
                android:id="@+id/bottom_sheet_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_dark_primary_text"
                android:textSize="@dimen/sub_medium_text"
                android:text="@string/local_folder"
                android:ellipsize="start"
                android:textStyle="italic"
            />

        </LinearLayout>

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/toggle_hidden_icon"
            android:layout_height="@dimen/size_20dp"
            android:layout_width="@dimen/zero"
            android:layout_gravity="center_vertical|end"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:layout_weight="1"
            app:iiv_icon="gmd-folder"
            app:iiv_color="@color/md_white_1000"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/explore_mode_panel"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/medium_spacing"
        android:paddingBottom="@dimen/small_spacing"
        android:elevation="@dimen/folder_bottom_sheet_large"
        tools:targetApi="lollipop"
        android:weightSum="10">

        <LinearLayout android:layout_width="@dimen/zero"
                      android:layout_weight="9"
                      android:orientation="horizontal"
                      android:id="@+id/ll_create_new_folder"
                      android:layout_height="wrap_content">
            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_height="@dimen/icon_width_height"
                android:layout_width="@dimen/icon_width_height"
                android:id="@+id/create_new_folder"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/big_spacing"
                android:layout_marginEnd="@dimen/big_spacing"
                app:iiv_icon="gmd-create-new-folder"
            />
            <TextView
                android:id="@+id/create_new_folder_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_new_folder"
                android:textSize="@dimen/medium_text"
            />
        </LinearLayout>
        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/done"
            android:layout_height="@dimen/icon_width_height"
            android:layout_width="@dimen/zero"
            android:layout_marginEnd="@dimen/big_spacing"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/ripple"
            android:layout_weight="1"
            app:iiv_icon="gmd-done"
            app:iiv_color="@color/md_white_1000"
        />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/folders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/ic_scrollbar"
    />
</LinearLayout>