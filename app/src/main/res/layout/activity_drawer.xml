                        >

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/Drawer_Tags_Icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
