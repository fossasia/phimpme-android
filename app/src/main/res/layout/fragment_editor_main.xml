<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
             android:stretchColumns="0,1,2,3,4"
              android:layout_height="wrap_content">
    <TableRow>
    <LinearLayout
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:id="@+id/menu_filter"
        android:layout_column="0"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/filtericonimage"
            android:layout_width="@dimen/icon_item_image_size"
            android:layout_height="@dimen/icon_item_image_size"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="filters"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:id="@+id/menu_enhance"
        android:layout_column="1"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/enhanceiconimage"
            android:layout_width="@dimen/icon_item_image_size"
            android:layout_height="@dimen/icon_item_image_size"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="enhance"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:id="@+id/menu_adjust"
        android:layout_column="2"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cropiconimage"
            android:layout_width="@dimen/icon_item_image_size"
            android:layout_height="@dimen/icon_item_image_size"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="crop"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:id="@+id/menu_stickers"
        android:layout_column="3"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/stickericonimage"
            android:layout_width="@dimen/icon_item_image_size"
            android:layout_height="@dimen/icon_item_image_size"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="stickers"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:id="@+id/menu_text"
        android:layout_column="4"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/texticonimage"
            android:layout_width="@dimen/icon_item_image_size"
            android:layout_height="@dimen/icon_item_image_size"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="text"/>

    </LinearLayout>
    </TableRow>
</TableLayout>