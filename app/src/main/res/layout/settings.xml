                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/whitelist_folders"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
