<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/share_item_padding"
    android:paddingStart="@dimen/sub_big_spacing"
    android:paddingEnd="@dimen/share_item_padding"
    android:paddingTop="@dimen/share_item_padding">

    <ImageView
        android:id="@+id/account_image"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginEnd="@dimen/account_margin"
        app:srcCompat="@drawable/ic_launcher_vector"/>

    <TextView
        android:id="@+id/account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view"
        android:textSize="@dimen/medium_text" />
</LinearLayout>