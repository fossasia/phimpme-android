<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/card"
    android:layout_margin="@dimen/medium_margin">
    <LinearLayout
        android:id="@+id/linear_card_excluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingTop="@dimen/alternate_half_padding"
        android:foreground="@drawable/ripple"
        android:clickable="true"
        android:paddingBottom="@dimen/alternate_half_padding"
        >
        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/folder_icon"
            android:layout_height="@dimen/size_25dp"
            android:layout_width="@dimen/zero"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            app:iiv_icon="gmd-folder"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="@dimen/zero"
            android:orientation="vertical"
            android:layout_weight="6"
            >
            <TextView
                android:id="@+id/Excluded_Title_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_dark_background"
                android:textSize="@dimen/medium_text"
                />
            <TextView
                android:id="@+id/Excluded_Path_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_400"
                android:textSize="@dimen/sub_medium_text"
                />
        </LinearLayout>

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/UnExclude_icon"
            android:layout_height="@dimen/size_16dp"
            android:layout_width="@dimen/zero"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            app:iiv_icon="gmd-close"
            android:clickable="true"
            android:background="@drawable/ripple"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>